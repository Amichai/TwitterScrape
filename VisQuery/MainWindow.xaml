<Window x:Class="VisQuery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel HorizontalAlignment="Left">
        <!--<TextBlock Margin="5" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center">Query</TextBlock>-->
        <TextBlock Margin="5" FontWeight="Bold">Keywords:</TextBlock>
        <TextBox Margin="5" Width="100"></TextBox>
        <TextBlock Margin="5" FontWeight="Bold">Source:</TextBlock>
        <ComboBox Margin="5">
            <ComboBoxItem>Economist</ComboBoxItem>
            <ComboBoxItem>Wall Street Journal</ComboBoxItem>
            <ComboBoxItem>Busenisse Week</ComboBoxItem>
            <ComboBoxItem>Bloomberg</ComboBoxItem>
            <ComboBoxItem>New York Times</ComboBoxItem>
        </ComboBox>
        <Button Margin="5" Height="30" Click="Button_Click">Search</Button>
    </StackPanel>
</Window>
